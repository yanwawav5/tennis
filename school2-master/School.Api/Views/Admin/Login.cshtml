@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title> - 登录</title>
    <meta name="keywords" content="">
    <meta name="description" content="">
    <link rel="shortcut icon" href="favicon.ico">
    <link href="/ad/css/bootstrap.min.css?v=3.3.6" rel="stylesheet">
    <link href="/ad/css/font-awesome.css?v=4.4.0" rel="stylesheet">
    <link href="/ad/css/animate.css" rel="stylesheet">
    <link href="/ad/css/style.css?v=4.1.0" rel="stylesheet">
    <!--[if lt IE 9]>
    <meta http-equiv="refresh" content="0;ie.html" />
    <![endif]-->
    <script>if (window.top !== window.self) { window.top.location = window.location; }</script>


    <script type="text/javascript">
      function OnSubmit() {
          if ($.trim($("#u").val()) == "") {
              alert("请输入用户名");
              $("#u").focus();
              return false;
          }
          if ($.trim($("#pwd").val()) == "") {
              alert("请输入密码");
              $("#pwd").focus();
              return false;
          } 
          return true;
      }
      $().ready(function () {
          $("#sub").hover(
            function () {
                $(this).css("cursor", "pointer");
            },
            function () {
            });
          $("#sub").click(function () {
              if (OnSubmit())
                  return;
              else
                  return false;
          });
      });
      function refreshcode() {
          $('#vcodeimg').attr('src', '/admanage/Ajax/Code?time=' + (new Date()).getTime());
      }
     @if (null != this.ViewData["error"])
  {
    @:alert("@this.ViewData["error"].ToString()");
  }
    </script>


</head>
<body class="gray-bg">
    <div class="middle-box text-center loginscreen  animated fadeInDown">
        <div>
            <div>
                <h1 class="logo-name">h</h1>
            </div>
            <h3>欢迎使用Admin</h3>
            <form class="m-t" role="form" action="/admin/Login" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" id="u" name="u" placeholder="用户名" required="">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="pwd" name="pwd" placeholder="密码" required="">
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">登 录</button> 

                <div>@ViewBag.msg</div>
            </form>
        </div>
    </div>
    <!-- 全局js -->
    <script src="/ad/js/jquery.min.js?v=2.1.4"></script>
    <script src="/ad/js/bootstrap.min.js?v=3.3.6"></script>  

</body>
</html>
